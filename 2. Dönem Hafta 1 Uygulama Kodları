//////////////////////////////////////////////////////////////////////////UYGULAMA-2///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
import 'package:flutter/material.dart';

void main() {
  runApp(
    MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text("Container Uygulaması"),
        ),
        body: Center(
          child: Container(
            height: 300.0,
            width: 300.0,
            color: Colors.red,
            child: Center(
              child: Text(
                'Container Kullanıyorum',
                style: TextStyle(fontSize: 20, color: Colors.white),
              ),
            ),
          ),
        ),
      ),
    ),
  );
}
